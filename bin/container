#!/usr/bin/env bash

function initializeEnvironment {
    export UID=${UID} 2>/dev/null
}

function initializeParameters {


    while [ ! $# -eq 0 ]
    do
        case "$1" in
            --start=* | -te)
                echo "--test was given"
                echo  ${1#*=}
                ;;
        esac
        shift
    done
}

function initializeCommands {
    case "$1" in
        start)
            start
            ;;
        stop)
            stop
            ;;
        restart)
            restart
            ;;
        status)
            status
        ;;
    esac
}

function copyEnvExample {
  [ ! -f app/.env ] && cp app/.env.example app/.env
  [ ! -f .env ] && cp .env.example .env
}

function start {
    copyEnvExample

    docker-compose -f docker-compose-dev.yml up --build -d

    bin/composer install
    
    #Generate ide helper files for auto complete
    bin/artisan ide-helper:generate
    bin/artisan ide-helper:models -W
}

function stop {
    docker-compose -f docker-compose-dev.yml stop
}

function restart {
    stop
    start
}

function status {
    docker-compose -f  docker-compose-dev.yml ps
}

function main {
    initializeEnvironment
    initializeParameters $@
    initializeCommands $@
}

main $@